# =============================================================================
# LearnTwinChain Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual credentials
# See ../env.example for complete configuration with detailed explanations
# =============================================================================

# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
API_V1_STR=/api/v1

# Database Configuration
DATABASE_URL=sqlite:///./digital_twin.db
MONGODB_URI=mongodb://localhost:27017/learntwinchain
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your_jwt_secret_key_here
SESSION_SECRET_KEY=your_session_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
NFT_CONTRACT_ADDRESS=0x...
REGISTRY_CONTRACT_ADDRESS=0x...
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# IPFS Configuration (Pinata Cloud)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
MILVUS_URI=your_milvus_uri
MILVUS_USER=your_milvus_username
MILVUS_PASSWORD=your_milvus_password

# Email Configuration
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_FROM=your_email@gmail.com

# LLM Configuration (Legacy)
LLM_API_KEY=your_llm_api_key
LLM_MODEL=gpt-4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/digital_twin.log

# =============================================================================
# For complete configuration with detailed explanations, see ../env.example
# ============================================================================= 